<UserControl x:Class="ElvisOnRadar.UserControls.RadarDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElvisOnRadar.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="OnControlLoaded" Unloaded="OnControlUnLoaded">
  <local:ELCanvas x:Name="mainCanvas" Background="Bisque" SizeChanged="OnCanvasSizeChanged">
    <Ellipse Name="radarCirc" 
         Stroke="{Binding Path=circleColorDP, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"
         StrokeThickness="10"/>
  </local:ELCanvas>
</UserControl>
